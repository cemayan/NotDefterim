@model project.Models.Signin.Kayit
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}



<script src="~/Scripts/toastr.min.js"></script>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
@if(ViewBag.Basarili == 1)
{
    <script type="text/javascript">
        var delay = 1000; //1 second
        toastr.info("Başarıyla Kaydoldunuz.");
        setTimeout(function () {
            window.location.href = '@Url.Action("Login", "Anasayfa")';
        }, delay);

    </script>
}



@Html.ValidationSummary(true)

@using (Html.BeginForm("Signin","Anasayfa",FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div class="form-group">        
        @Html.LabelFor(x=>x.Ad)
        @Html.TextBoxFor(x=>x.Ad,new {@class="form-control",@placeholder="Ad"})
        @Html.ValidationMessageFor(x=>x.Ad)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Soyad)
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", @placeholder = "Soyad" })
        @Html.ValidationMessageFor(x => x.Soyad)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.KullaniciAdi)
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
        @Html.ValidationMessageFor(x => x.KullaniciAdi)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Sifre)
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @type = "password", @placeholder = "Şifre" })
        @Html.ValidationMessageFor(x => x.Sifre)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.SifreT)
        @Html.TextBoxFor(x => x.SifreT, new { @class = "form-control", @type = "password", @placeholder = "Şifre" })
    </div>




    <button type="submit" id="aa" class="btn btn-default btn-block">Kayıt Ol</button>

}
