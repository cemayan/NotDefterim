@model project.Models.Login.Giris
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Giriş-darkproject</title>
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>

</head>

<body style="padding:70px">

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Login","Anasayfa")">darkproject</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">

                @using (Html.BeginForm("Login", "Anasayfa", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Email, new { @placeholder = "Emailinizi giriniz...", @class = "form-control", @type = "email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Sifre, new { @placeholder = "Şifrenizi giriniz...", @class = "form-control", @type = "password" })
                    </div>
                    <button type="submit" class="btn btn-info">Giriş Yap</button> <button type="button" class="btn btn-danger" onclick="Signin()">Üye Ol</button>
                }
            </div>
        </div>
    </nav>
    <script>
        function Signin() {

            window.location.assign('@Url.Action("Signin","Anasayfa")');
        }

    </script>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <script src="~/Scripts/toastr.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>

</html>
